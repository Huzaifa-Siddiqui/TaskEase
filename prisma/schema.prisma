generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  role     String  @default("user") // Default to "user", change manually for admins
  todos    Todo[]
}

model Todo {
  id         String   @id @default(uuid())
  text       String
  completed  Boolean  @default(false)
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())  // Ensure this field exists
}